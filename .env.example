GOOGLE_API_KEY=SUA_CHAVE_AQUI
OPENAI_API_KEY=SUA_CHAVE_AQUI



# Arquivo .env para Docker Compose Stack
# Copiar para raiz do projeto como ".env"

# ============================================================
# OLLAMA Configuration
# ============================================================
OLLAMA_API_URL=http://ollama:11434
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_API_PORT=11434

# Configuração de performance
OLLAMA_NUM_PARALLEL=4
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_KEEP_ALIVE=5m

# Modelos recomendados (baixar via: docker exec -it ollama-embeddings ollama pull <model>)
# - nomic-embed-text (768 dims, 137M params)
# - mxbai-embed-large (1024 dims, 334M params)
# - all-minilm (384 dims, 23M params)

# ============================================================
# QDRANT Configuration
# ============================================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=abcd1234
QDRANT_TIMEOUT=30
QDRANT_PREFER_GRPC=false

# Nome da collection (você vai criar no Jupyter)
QDRANT_COLLECTION_NAME=documents_collection

# ============================================================
# JUPYTER Configuration
# ============================================================
JUPYTER_TOKEN=abcd1234
JUPYTER_PORT=8888

# ============================================================
# POSTGRESQL Configuration (Metadados)
# ============================================================
POSTGRES_USER=vectordb
POSTGRES_PASSWORD=abcd1234
POSTGRES_DB=vectordb_metadata
POSTGRES_PORT=5432

# ============================================================
# APLICAÇÃO Configuration
# ============================================================
# Caminho para índices FAISS
FAISS_INDEX_PATH=/home/jovyan/work/faiss_indices

# Caminho para dados
DATA_PATH=/home/jovyan/work/data

# Configuração de batch (importante para performance)
BATCH_SIZE=32
MAX_WORKERS=4

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================================
# DESENVOLVIMENTO
# ============================================================
DEBUG=true
DEVELOPMENT_MODE=true